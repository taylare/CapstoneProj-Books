<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Reviews</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">

</head>
<body>
    <header class="text-center p-4">
        <h1>My Book Reviews</h1>
        <a href="/add" class="btn btn-add">Add New Book</a>
    </header>
   
        <% if (books.length > 0) { %>
            <div class="book-list">
                <% books.forEach(book => { %>
                    <div class="book-box">
                        <img src="<%= book.cover_image_url %>" 
                             alt="<%= book.title %>" class="book-cover"
                             style="object-fit: cover; height: 400px; width: 100%;">
                        <div class="book-content">
                            <h2><%= book.title %></h2>
                            <p><strong>Author:</strong> <%= book.author %></p>
                            <p><strong>Rating:</strong> <%= book.rating %>/5</p>
                            <p><strong>Date Read:</strong> <%= new Date(book.date_read).toLocaleDateString() %></p>
                            <p><%= book.notes %></p>
                            <div class="actions">
                                <a href="/edit/<%= book.id %>" class="btn-edit">Edit</a>
                                <form action="/delete/<%= book.id %>" method="POST" class="inline-form" >
                                    <button type="submit" class="btn-delete">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center">No books found. Start by adding a new book!</p>
        <% } %>
</body>
</html>
